<div class="form-group">
  {{textarea value=value class="form-control" name=valuePath rows=rows}}
  {{!--
  {{#if isValid}}
    <span class="valid-input fa fa-check"></span>
  {{/if}}
  --}}

  <div class="input-error">
      {{#if showMessage}}
          <div class="error">
              {{v-get model valuePath 'message'}}
          </div>
      {{/if}}
  </div>
</div>